<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleBarStyle">
        <item name="android:fontFamily" android:ignore="NewApi">@font/futura_std_book</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Details Activity theme. -->
    <style name="DetailsTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- Style for a spots category tvs in the main activity -->
    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Style for a category of all spot titles in the spot GridView activities -->
    <style name="SpotTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for a category of all spot titles in the details activity -->
    <style name="SpotTitleForDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Style for a category of all spot titles in the details activity -->
    <style name="SpotDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Style for the access time in the details activity -->
    <style name="SpotAccessTime">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
